<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/nen1">


    <TextView
        android:id="@+id/txtdangnhap"
        android:layout_width="177dp"
        android:layout_height="63dp"
        android:text="Đăng Nhập"
        android:textColor="#EC0404"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <EditText
        android:id="@+id/edittextuser"
        android:layout_width="402dp"
        android:layout_height="65dp"
        android:ems="10"
        android:hint="Nhập tài khoản"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtdangnhap"
        app:layout_constraintVertical_bias="0.239" />

    <EditText
        android:id="@+id/edittextpass"
        android:layout_width="402dp"
        android:layout_height="65dp"
        android:ems="10"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextuser"
        app:layout_constraintVertical_bias="0.042" />

    <Button
        android:id="@+id/buttondangky"
        android:layout_width="113dp"
        android:layout_height="52dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/button_backgroud"
        android:text="Đăng ký"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextpass" />

    <Button
        android:id="@+id/buttondangnhap"
        android:layout_width="118dp"
        android:layout_height="51dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="74dp"
        android:background="@drawable/button_backgroud"
        android:text="Đăng nhập"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toEndOf="@+id/buttondangky"
        app:layout_constraintTop_toBottomOf="@+id/edittextpass" />

    <Button
        android:id="@+id/buttonthoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_backgroud"
        android:text="Thoát"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttondangky"
        app:layout_constraintVertical_bias="0.51" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="147dp"
        android:layout_height="50dp"
        android:text="Nhớ mật khẩu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextpass"
        app:layout_constraintVertical_bias="0.03" />

</androidx.constraintlayout.widget.ConstraintLayout>
